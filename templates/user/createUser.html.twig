{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
    <form method="POST" action={{ path('create_user') }}>
     <ul style="list-style-type: none;">
        <li><input name="first_name" class="firstname" type="text" placeholder="Имя"></li>
        <li><input name="last_name" class="lastname" type="text" placeholder="Фамилия"></li>
        <li><input name="age" class="age" type="text" placeholder="Возраст"></li>
        <li><input name="status" class="status" type="text" placeholder="Статус"></li>
        <li><input name="telegram" class="telegram" type="text" placeholder="telegram"></li>
        <li><input name="email" class="email" type="text" placeholder="email"></li>
        <li><input name="address" class="address" type="text" placeholder="Адрес"></li>
        <li><select name="department">
            {% for i in department %}
                <option value="{{ i.id }}">{{ i.name }}</option>
            {% endfor %}
        </select></li>
        <li><input type="submit"></li>
    </ul>
    </form>
{% endblock %}